<li class="list-group-item">
  <div class="row">
    <div class="col-md-8 col-sm-6">
      <%= link_to trait_path(trait, :resource_name => trait.class), method: :delete, id: "destroy_trait",
                  data: { confirm: "Are you sure you want to delete this #{trait.class} and all its evaluations?" },
                  :remote => true, :class => 'close-link destroy_trait' do %>
        <span class="fa-stack">
          <i class="fa fa-circle fa-default fa-stack-2x"></i>
          <i class="fa fa-times fa-stack-1x fa-inverse"></i>
        </span>
      <% end %>
      <%= trait.name %>
    </div>
    
    <div class="col-md-4 col-sm-6 pull-right">
      <%= render partial: 'evaluations/scale', object: 3, :locals => { :showable => trait }  %>
    </div>
  </div>    
</li>    