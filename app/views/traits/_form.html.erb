<%= simple_form_for(Trait.new, :remote => true, :html => { :id => "new_#{resource.downcase}" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, wrapper: :vertical_input_group, label: false  do %>
      <%= f.input_field :name, class: "form-control", placeholder: "Type your #{resource.downcase} here" %>
      <%= f.hidden_field :resource_name, :value => resource %>
      <%= f.hidden_field :user_id, :value => @user.id %>
      <%= f.hidden_field :proposer_id, :value => current_user.id %>
      <span class="input-group-btn">
        <%= f.button :submit, 'Add', class: "btn btn-primary" %>
        <%= link_to 'Show proposals', '#', class: "btn btn-success", 
                                    :data => { behavior: "proposal-link", url: link_to_change_proposal(resource) } %>
      </span>
    <% end %>
  </div>
<% end %>