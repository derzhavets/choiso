<h3>Define and evaluate your alternatives</h3>
  <%= form_for @alternative, url: {action: "create"}, html: { role: "form" } do |t| %>
    <div="form-group">
      <div class="row">
        <div class="col-md-8">
          <%= t.text_field :name, class: "form-control input-lg", placeholder: "Type your alternative here" %>
        </div>
        <div class="col-md-3">
          <%= t.submit 'Add', class: "btn btn-primary btn-lg" %>
        </div>  
      </div>
    </div>  
  <% end %>


<div class="row">
  <div class="col-md-6">
    <br>
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="2">Your current alternatives</th>
          <th>Evaluation</th>
        </tr>
      </thead>
      <tbody>
        <% @alternatives.each do |alternative| %>
          <tr>
            <td>
              <%= link_to alternative_path(alternative), method: :delete, 
                          data: { confirm: 'Are you sure you want to delete this alternative and all its evaluations?' } do %>
                <i class="fa fa-times" aria-hidden="true"></i>
              <% end %>
            </td>
            <td><%= alternative.name %></td>
            <td>
              <div class="row">
                <% (1..3).each do |i| %>
                  <div class="col-md-1"><i class="fa fa-star-o" aria-hidden="true"></i></div>
                <% end %>
              </div>  
            </td>
          </tr>  
            <% end %>  
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    
  </div>
</div>