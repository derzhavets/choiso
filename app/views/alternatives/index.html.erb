<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left" style="padding-top:6px;">
          Define and evaluate your alternatives
        </div>
        <div class="btn-group pull-right">
          <%= link_to root_path, class: "btn btn-default", id: "toggle-alternatives", remote: true  do %>
            <span id="toggle-alternatives-label">Collapse</span>
          <% end %>
        </div>
      </div>
    
      <div class="panel-body" id="alternatives-body">
        
        <%= render 'alternatives/form' %>
        <hr>
        
          <ul class="list-group" id="alternatives-listing">
            <%= render @alternatives %> 
          </ul>  
        
      </div>  
    </div>  
  </div>
</div>

<!-- RIGHT MENU -->
<% content_for :right_menu do %>
  <%= render 'common/proposals', :showable => "alternatives" %>
<% end %>

<%= content_for :right_menu do %>
  <table class="table table-striped">
    <tbody>
      <%= form_for @request do |f| %>
        <% current_user.friends.each do |friend| %>
          <tr>
            <td><%= check_box_tag 'friend_ids[]', friend.id %></td>
            <td><%= h friend.full_name %></td>
                <%= f.hidden_field_tag 'collectible_type', "alternatives" %>
          </tr>
        <% end %>
          <tr><td colspan="2"><%= f.submit 'Send request', class: "btn btn-primary" %></td></tr>
      <% end %>  
    </tbody>  
  </table>  
<% end %>