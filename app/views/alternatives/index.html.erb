<div class="row">
  <div class="col-lg-8">
    <div class="panel panel-default devise-bs">
      <div class="panel-heading">
        <h4>Define and evaluate your alternatives</h4>
      </div>
      <div class="panel-body"> 
        <%= form_for @alternative, url: {action: "create"}, html: { role: "form" } do |t| %>
          <div="form-group">
            <div class="row">
              <div class="col-md-9" style="padding-right:6px; padding-left:10px;">
                <%= t.text_field :name, class: "form-control", placeholder: "Type it right here" %>
              </div>
              <div class="col-md-2" style="padding-left:0px;">
                <%= t.submit 'Add', class: "btn btn-primary" %>
              </div>  
            </div>
          </div>  
        <% end %> 
        <table class="table table-striped">
          <tbody>
            <% @alternatives.each do |alternative| %>
              <tr>
                
                <td>
                  <%= link_to alternative_path(alternative), method: :delete, 
                              data: { confirm: 'Are you sure you want to delete this alternative and all its evaluations?' } do %>
                    <i class="fa fa-times" aria-hidden="true"></i>
                  <% end %>
                </td>
                <td><%= alternative.name %></td>
                <td>
                  <div class="row">
                    <% (1..3).each do |i| %>
                      <div class="col-md-1"><i class="fa fa-star-o" aria-hidden="true"></i></div>
                    <% end %>
                  </div>  
                </td>
              </tr>  
            <% end %>  
          </tbody>
        </table>
      </div>
  </div>
</div>