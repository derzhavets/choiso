<h3>Propose alternatives for <%= @proposant.full_name %></h3>
<%= form_for @alternative, url: {controller: "alternatives", action: "add_proposal"}, html: { role: "form" } do |t| %>
  <div="form-group">
    <div class="row">
      <div class="col-md-8">
        <%= t.text_field :name, class: "form-control input-lg", placeholder: "Type your proposal here" %>
      </div>
        <%= t.hidden_field :user_id, :value => @proposant.id %> 
      <div class="col-md-3">
        <%= t.submit 'Propose', class: "btn btn-primary btn-lg" %>
      </div>  
    </div>
  </div>  
<% end %> 

<br />

<div class="col-md-8">
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="2" class="page-header"><h2>Your proposals</h2></th>
      </tr>
    </thead>  
    <tbody>
      <% @proposant.alternatives_proposed_by(current_user).each do |alternative| %>
        <tr>
          <td><%= alternative.name %></td>
          <td>
            <%= link_to 'Remove proposal', remove_proposal_path(alternative), 
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure?' },
                                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
