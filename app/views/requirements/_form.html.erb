<%= simple_form_for(Requirement.new, :remote => true, :html => {:id => "new_requirement_#{@user.own_alternatives.index(alternative)}"} ) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, wrapper: :vertical_input_group, label: false  do %>
      <%= f.input_field :name, class: "form-control", placeholder: "Type your requirement here" %>
      <span class="input-group-btn">
        <%= f.button :submit, 'Add', class: "btn btn-primary" %>
        <%= f.hidden_field_tag 'user_id', @user.id %>
        <%= f.hidden_field_tag 'alternative_id', alternative.id %>
        <%= link_to 'Show proposals', root_path, class: "btn btn-success" %>
      </span>
    <% end %>
  </div>
<% end %>