<li class="list-group-item">
  <div class="row">
    <div class="col-md-8 col-sm-6">
      <%= link_to weakness_path(weakness), method: :delete, id: "destroy_weakness",
                  data: { confirm: 'Are you sure you want to delete this weakness and all its evaluations?' },
                  :remote => true, :class => 'close-link destroy_weakness' do %>
        <span class="fa-stack">
          <i class="fa fa-circle fa-default fa-stack-2x"></i>
          <i class="fa fa-times fa-stack-1x fa-inverse"></i>
        </span>
      <% end %>
      <%= weakness.name %>
    </div>
    
    <div class="col-md-4 col-sm-6 pull-right">
      <%= render partial: 'evaluations/scale', object: 3, :locals => { :showable => weakness } %>
    </div>
  </div>    
</li>    