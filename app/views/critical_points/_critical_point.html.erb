<li class="list-group-item <%= critical_point.point.class.to_s.downcase %>-point-style">
  <div class="row">
    <div class="col-md-8 col-sm-6">
      <%= link_to critical_point_path(critical_point), method: :delete, id: "destroy_critical_point",
                  data: { confirm: 'Are you sure you want to delete this critical point and all its evaluations?' },
                  :remote => true, :class => 'close-link destroy_critical_point' do %>
        <span class="fa-stack">
          <i class="fa fa-circle fa-default fa-stack-2x"></i>
          <i class="fa fa-times fa-stack-1x fa-inverse"></i>
        </span>
      <% end %>
      <%= critical_point.point.name %>
    </div>
    
      <div class="col-md-4 col-sm-6 pull-right">
        <%= render partial: 'evaluations/scale', object: 4, :locals => { :showable => critical_point } %>
      </div>
  </div>    
</li>    