$('.destroy_critical_point').bind('ajax:success', function() {  
        $(this).closest('li').fadeOut();
});
$('#counter-<%= @critical_point.alternative_index %>').html('<%= j render partial: 'critical_points/counter', locals: { alternative: @critical_point.alternative, user: current_user } %>')
$('#traits-listing-<%= @user.own_alternatives.index(@alternative) %>-<%= @traits.index(@critical_point.point.class.to_s) %>').append('<%= j render partial: "trait", object: @critical_point.point, locals: { :alternative => @alternative } %>');